// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model tickets {
  id        Int       @id @default(autoincrement())
  email     String
  fullName  String
  ticketId  Int       @unique
  subject   String
  isOpen    Boolean
  orderId   String
  date      DateTime
  messages  message[]
}

model message {
  id        Int @id @default(autoincrement())
  isReply   Boolean
  messageId String 
  message   String
  replyId   String 
  date      DateTime
  tickets   tickets? @relation(fields: [ticketsId], references: [id])
  ticketsId Int?
}
